<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relat√≥rio</title>

    <link href="https://unpkg.com/tailwindcss/dist/tailwind.min.css" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>    
    <style>
        table {
            width: 100%;
        }
        th {
            text-align: left;
        }
    </style>
</head>
<body class="bg-purple-100">
    <div class="m-8">           
        <h1 class="text-3xl mb-8">Listagem de Clientes</h1>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>email</th>
                    <th>telefone</th>
                    <th>quantidade de pets</th>
                </tr>
            </thead>
            <tbody>
            <% if (listaClientes.length > 0) { %>
                <% listaClientes.forEach(cliente => { %>
                    <tr>
                        <td><%= cliente.dataValues.nome %></td>
                        <td><%= cliente.dataValues.email %></td>
                        <td><%= cliente.dataValues.telefone %></td>
                        <td><%= cliente.dataValues.pets.length %></td>
                    </tr>
                <%  }); %>
            <% } %>
            </tbody>
            
        </table>
        <button id="gerar-pdf" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-8">Gerar PDF</button>
    </div>

    <script>
        document.getElementById('gerar-pdf').addEventListener('click', function () {
            const doc = new jsPDF();
            doc.autoTable({ html: 'table' });
            doc.save('relatorio.pdf');
        });
    </script>
</body>
</html>
